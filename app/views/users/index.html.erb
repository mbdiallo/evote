<%= render partial: 'shared/notices'%>
<div class="block-header">
  <h2>Welcome <%= current_user.name %></h2>
</div>

<div class="card">
  <div class="listview lv-bordered lv-lg">
    <div class="lv-header-alt clearfix">
      <h2 class="lvh-label hidden-xs">Votes</h2>
      <div class="pull-right">
      </div>
    </div>

    <div class="lv-body">
      <div class="lv-item media normal" id="the_form">
        <% if @users.any? %>
          <% @users.each do |user|%>
            <div class="col-md-2">
              <%= user.student_id %>
            </div>
            <div class="col-md-4">
              <%= user.name %>
            </div>
            <div class="col-md-4">
              <%= user.email %>
            </div>
            <div class="col-md-2">
              <% if !user.has_voted %>
                <span style="color: red">Has not voted</span>
              <%else%>
                <span style="color: green">Has voted</span>
              <%end%>
            </div>
          <%end%>
        <%end%>
      </div>
    </div>
  </div>
</div>
