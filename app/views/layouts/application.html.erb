<!DOCTYPE html>
<html lang="en">
  <%= render partial: "layouts/head"%>
  <body>

    <%= render partial: "layouts/navigation"%>
    <section id="main">
      <% if user_signed_in? %>
        <% if current_user.admin %>
          <%= render partial: "layouts/sidebar"%>
        <%end%>
      <%end%>
      <section id="content">
        <div class="container">
          <%if content_for?(:content)%>
            <%= yield(:content)%>
          <%else%>
            <%#= flash_messages%>
            <%= yield %>
          <%end%>
        </div>
      </section>
    <%= render partial: "layouts/footer"%>
  </body>
</html>
