<h3>Sign up</h3>

<p class="text-left">
  We just need a couple of details to get started then we'll guide you through setup.
</p>


<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>
  <div class="input-group m-b-20">
    <span class="input-group-addon"><i class="zmdi zmdi-email"></i></span>
    <div class="fg-line">
      <%= f.email_field :email, autofocus: true, class: "form-control floatlabel", placeholder: "Email" %>
    </div>
  </div>

  <div class="input-group m-b-20">
    <span class="input-group-addon"><i class="zmdi zmdi-map"></i></span>
    <div class="fg-line">
      <%= f.text_field :student_id, autofocus: true, class: "form-control floatlabel", placeholder: "Student Id" %>
    </div>
  </div>
  <div class="input-group m-b-20">
    <span class="input-group-addon"><i class="zmdi zmdi-account"></i></span>
    <div class="fg-line">
      <%= f.text_field :name, autofocus: true, class: "form-control floatlabel", placeholder: "Name" %>
    </div>
  </div>

  <div class="input-group m-b-20">
    <span class="input-group-addon"><i class="zmdi zmdi-lock"></i></span>
    <div class="fg-line">
      <%= f.password_field :password, autofocus: true, class: "form-control floatlabel", placeholder: "Password" %>
    </div>
  </div>

  <div class="input-group m-b-20">
    <span class="input-group-addon"><i class="zmdi zmdi-lock"></i></span>
    <div class="fg-line">
      <%= f.password_field :password_confirmation, autofocus: true, class: "form-control floatlabel", placeholder: "Password confirmation" %>
    </div>
  </div>



  <%= button_tag(type: :submit, class: "btn btn-login btn-danger btn-float waves-effect waves-circle waves-float") do%>
    <i class="zmdi zmdi-arrow-forward"></i>
  <%end%>
<% end %>
